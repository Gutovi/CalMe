<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CalMeTheme" parent="AppTheme" />

    <style name="Theme.CalMeTheme.Light.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:colorForeground">@android:color/black</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDarkest</item>
    </style>

    <style name="CalMeText" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">casual</item>
        <item name="android:textColor">@color/colorPrimaryDarkest</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="CalMeTitle" parent="CalMeText">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
